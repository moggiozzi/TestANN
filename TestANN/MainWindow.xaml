<Window x:Class="TestANN.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestANN"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="22*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="LoadAndPlay" Content="TestPlay" Margin="45,261,0,0" VerticalAlignment="Top" Click="button_Click" HorizontalAlignment="Left" Width="75"/>
        <Button x:Name="Save" Grid.ColumnSpan="2" Content="TestSave" HorizontalAlignment="Left" Margin="223,261,0,0" VerticalAlignment="Top" Width="75" Click="button1_Click"/>
        <Canvas x:Name="MyCanvas" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="143" Margin="83,75,0,0" VerticalAlignment="Top" Width="240"/>
        <Button x:Name="Draw" Content="TestDraw" Grid.Column="1" HorizontalAlignment="Left" Margin="84,270,0,0" VerticalAlignment="Top" Width="75" Click="Draw_Click"/>
        <Button x:Name="TestNet" Content="TestNet" Grid.Column="1" HorizontalAlignment="Left" Margin="157,292,0,0" VerticalAlignment="Top" Width="75" Click="TestNet_Click"/>
    </Grid>
</Window>
